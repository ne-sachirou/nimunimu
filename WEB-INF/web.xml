<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<servlet>
		<servlet-name>Index</servlet-name>
		<servlet-class>tk.c4se.halt.ih31.nimunimu.controller.IndexController
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>tk.c4se.halt.ih31.nimunimu.controller.LoginController
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminMembers</servlet-name>
		<servlet-class>tk.c4se.halt.ih31.nimunimu.controller.AdminMembersController
		</servlet-class>
	</servlet>

	<filter>
		<filter-name>AccessControl</filter-name>
		<filter-class>tk.c4se.halt.ih31.nimunimu.filter.AccessControlFilter
		</filter-class>
	</filter>
	<!-- <filter> <filter-name>AccessLog</filter-name> <filter-class>tk.c4se.halt.ih31.nimunimu.filter.AccessLogFilter 
		</filter-class> </filter> -->

	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminMembers</servlet-name>
		<url-pattern>/admin/members</url-pattern>
	</servlet-mapping>

	<filter-mapping>
		<filter-name>AccessControl</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>
	<!-- <filter-mapping> <filter-name>AccessLog</filter-name> <url-pattern>*</url-pattern> 
		</filter-mapping> -->

</web-app>